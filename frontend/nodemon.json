{
    "watch": ["src/", "angular.json", "package.json", "tsconfig.json"],
    "ext": "ts, html,css,scss,json",
    "execMap": {
        "json": "npm install"
    },
    "exec": "ng serve --host ${HOST} --port ${DEVSERVER_HTTPS_PORT} --ssl true --ssl-cert /https/${CERT_NAME} --ssl-key /https/${CERT_KEY} --hmr --live-reload & ng serve --host ${HOST} --port ${DEVSERVER_HTTP_PORT} --hmr --live-reload"
}